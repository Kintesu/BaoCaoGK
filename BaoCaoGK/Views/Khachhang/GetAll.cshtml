@model List<Khachhang>

@{
    ViewData["Title"] = "Danh Sách khách hàng";
}

<section class="about py-lg-5 py-md-5 py-5">
    <div class="container">
        <div class="inner-sec-w3pvt py-lg-5 py-3">
            <h1>@ViewData["Title"]</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên tài khoản</th>
                        <th>HỌ VÀ TÊN</th>
                        <th>Số giờ chơi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var khachHang in Model)
                    {
                        <tr>
                            <td>@khachHang.Tt</td>
                            <td>@khachHang.Tk</td>
                            <td>@khachHang.Hodem @khachHang.Ten</td>
                            <td>@khachHang.Sogio</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>